<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OverviewFragment">

    <TableLayout
        android:id="@+id/overviewTable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp">

        <TableRow android:layout_height="61dp">

            <TextView
                android:id="@+id/overviewHeaderAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header_account"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/overviewHeaderBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header_balance"
                android:textAlignment="viewEnd"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>


</FrameLayout>